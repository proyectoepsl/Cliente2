<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nfc.proyecto.cliente"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="25" />

    <!-- Permisos imei -->
    <!-- WRITE_EXTERNAL_STORAGE tiene implÃ­cito READ_EXTERNAL_STORAGE porque pertenecen al mismo grupo de permisos -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- Permisos internet rest -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permisos nfc -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/nfc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nfc"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nfc.proyecto.cliente.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nfc.proyecto.cliente.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.nfc.proyecto.cliente.UserActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <!-- Permisos de NFC solo para la actividad NFC -->
        <activity
            android:name="com.nfc.proyecto.cliente.NfcActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <action android:name="android.nfc.action.TECH_DISCOVERED" />

                <data android:mimeType="text/plain" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />
        </activity>

        <uses-feature
            android:name="android.hardware.nfc"
            android:required="true" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.nfc.proyecto.cliente.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>